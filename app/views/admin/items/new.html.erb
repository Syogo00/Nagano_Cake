<h2>商品新規登録</h2>

<%= form_with model: @item, url: admin_items_path do |f| %>
  <div class="form-group">商品画像
    <%= f.file_field :image, acccept: "image/*"  %>
  </div>
  <div class="form-group">商品名
    <%= f.text_field :name %>
  </div>
  <div class="form-group">商品説明
    <%= f.text_area :introduction %>
  </div>
  <div class="form-group">ジャンル
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
  </div>
  <div class="form-group">税抜価格
    <%= f.text_field :price %><span>円</span>
  </div>
  <div class="form-group">販売ステータス
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, '販売中', value: true %>

    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, '販売停止中', value: false %>
  </div>

  <div class="form-group">
    <%= f.submit "新規登録" %>
  </div>
<% end %>