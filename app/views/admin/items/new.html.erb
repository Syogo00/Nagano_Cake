<div class="container">
  <h2 class="m-2">商品新規登録</h2>
  <div class="col-lg-10 m-auto">
    <% if @item.errors.any? %>
      <%= @item.errors.count %>件のエラーが発生しました
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @item, url: admin_items_path do |f| %>
      <div class="field">商品画像
        <%= f.file_field :image, acccept: "image/*"%>
      </div>
      <div class="field">商品名
        <%= f.text_field :name %>
      </div>
      <div class="field">商品説明
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
      <div class="field">ジャンル
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
      </div>
      <div class="field">税抜価格
        <%= f.text_field :price%><span>円</span>
      </div>
      <div class="field">販売ステータス
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '販売中', value: true %>

        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売停止中', value: false %>
      </div>
      <div class="text-center">
        <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
      </div>
    <% end %>
  </div>
</div>