<div class="container">
  <h2 class="m-2">ジャンル一覧・追加</h2>
  <div class="col-lg-10 m-auto">
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
      <div class="field">ジャンル名
        <%= f.text_field :name %>
      </div>
      <div class="text-right">
        <%= f.submit "新規登録", class: "btn btn-success"  %>
      </div>
    <% end %>

    <table class="table m-3">
      <thead>
        <tr>
          <th>ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success"  %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>