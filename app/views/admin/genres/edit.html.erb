<div class="container">
  <h2 class="m-2">ジャンル編集</h2>
  <div class="col-lg-10 m-auto">
    <% if @genre.errors.any? %>
      <%= @genre.errors.count %>件のエラーが発生しました
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @genre, url: admin_genre_path do |f| %>
      <div class="field">
        <%= f.text_field :name %>
      </div>
      <div class="text-right">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
