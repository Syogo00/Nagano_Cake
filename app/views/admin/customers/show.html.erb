<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h2>

<div class="field">会員ID
  <%= @customer.id %>
</div>
<div class="field">氏名
  <%= @customer.first_name %>  <%= @customer.last_name %>
</div>
<div class="field">フリガナ
  <%= @customer.first_name_kana %>  <%= @customer.last_name_kana %>
</div>
<div class="field">郵便番号
  <%= @customer.postal_code %>
</div>
<div class="field">住所
  <%= @customer.address %>
</div>
<div class="field">電話番号
  <%= @customer.telephone_number %>
</div>
<div class="field">会員ステータス
  <% if @customer.is_active == true %>
    <p>有効</p>
  <% else %>
    <p>退会</p>
  <% end %>
</div>


