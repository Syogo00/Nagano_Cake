<div class="container">
  <h2 class="m-2"><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>
  <div class="col-lg-10 m-auto">
    <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
      <div class="field">会員ID
        <%= @customer.id %>
      </div>
      <div class="field">氏名
        <%= f.text_field :first_name %>  <%= f.text_field :last_name %>
      </div>
      <div class="field">フリガナ
        <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %>
      </div>
      <div class="field">郵便番号
        <%= f.text_field :postal_code %>
      </div>
      <div class="field">住所
        <%= f.text_field :address %>
      </div>
      <div class="field">電話番号
        <%= f.text_field :telephone_number %>
      </div>
      <div class="field">メールアドレス
        <%= f.text_field :email %>
      </div>
      <div>会員ステータス
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '有効', value: true %>

        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '退会', value: false %>
      </div>
      <div class="text-right">
        <%= f.submit "編集を保存する" , class: "btn btn-success"%>
      </div>
    <% end %>
  </div>
</div>

