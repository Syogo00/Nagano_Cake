<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h2>
<%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
<div class="form-group">会員ID
  <%= @customer.id %>
</div>
<div class="form-group">氏名
  <%= f.text_field :first_name %>  <%= f.text_field :last_name %>
</div>
<div class="form-group">フリガナ
  <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %>
</div>
<div class="form-group">郵便番号
  <%= f.text_field :postal_code %>
</div>
<div class="form-group">住所
  <%= f.text_field :address %>
</div>
<div class="form-group">電話番号
  <%= f.text_field :telephone_number %>
</div>
<div class="form-group">メールアドレス
  <%= f.text_field :email %>
</div>
<div>会員ステータス
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '有効', value: true %>

      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '退会', value: false %>
</div>
<div class="form-group">
  <%= f.submit "編集を保存する" %>
</div>
<% end %>

