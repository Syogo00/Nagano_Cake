<h2>配送先編集</h2>
<% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
  <ul>
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @address, url: address_path(@address.id) do |f| %>
  <div class="form-group">郵便番号(ハイフンなし)
      <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">住所
      <%= f.text_field :address %>
  </div>
  <div class="form-field">氏名
      <%= f.text_field :name %>
  </div>
  <dib class="form-field">
      <%= f.submit "変更内容を保存" %>
  </dib>
<% end %>
