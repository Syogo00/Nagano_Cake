<h2>配送先登録/一覧</h2>

<% if @address.errors.any? %>
  <%= @address.errors.count %>件のエラーが発生しました
  <ul>
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @address, url: addresses_path do |f| %>
  <div class="form-group">郵便番号(ハイフンなし)
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">住所
    <%= f.text_field :address %>
  </div>
  <div class="form-group">宛名
    <%= f.text_field :name %>
  </div>
  <din class="form-group">
    <%= f.submit "新規登録" %>
  </din>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address.id) %></td>
      <td><%= link_to "削除する", address_path(address), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>