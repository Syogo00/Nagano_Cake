<h2>ショッピングカート</h2>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_item.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_image(70,70) %><%= cart_item.item.name %></td>
      <td><%= (cart_item.item.price*1.1).floor %></td>
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
          <%= f.hidden_field :item_id, :value => cart_item.item.id %>
          <%= f.hidden_field :customer_id, :value => cart_item.customer.id %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "変更" %>
        <% end %>
      </td>
      <td>
        <%= (cart_item.item.price*1.1).floor*cart_item.amount %>
      </td>
      <% @total_price += cart_item.item.price*1.1).floor*cart_item.amount %>
    </tr>
    <% end %>
  </tbody>
</table>
