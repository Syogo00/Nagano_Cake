<h2>ショッピングカート</h2>
<div>
  <%= button_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>
</div>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sum = 0 %>
    <% @cart_item.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_image(70,70) %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
          <%= f.hidden_field :item_id, :value => cart_item.item.id %>
          <%= f.hidden_field :customer_id, :value => cart_item.customer.id %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "変更" %>
        <% end %>
      </td>
      <td>
        <%= cart_item.subtotal %>
      </td>
      <% @sum += cart_item.subtotal %>
      <th><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></th>
    </tr>
    <% end %>
    合計金額  <%= @sum %>
  </tbody>
</table>
<div>
  <%= link_to "買い物を続ける", customers_my_page_path %>
</div>
<div>
  <%= link_to "情報入力に進む", new_order_path %>
</div>