<div class="container">
    <div class="col-sm-12 px-5 px-sm-0">
      <h2>ログイン</h2>
      <div class="col-md-8 m-auto">
        <h4>会員の方はこちらからログイン</h4>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field m-2">
            <%= f.label :"メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control"%>
          </div>
          <div class="field m-2">
            <%= f.label :"パスワード" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <div class="actions text-right m-3">
            <%= f.submit "ログイン", class: "btn btn-sm btn-success"  %>
          </div>
        <% end %>
      <div>
        <h4>会員登録がお済みでない方</h4>
        <div class="field m-2">
          <%= render "public/shared/links"%>
        </div>
      </div>
    </div>
</div>