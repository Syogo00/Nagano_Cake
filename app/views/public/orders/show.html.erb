<h2>注文履歴詳細</h2>

<h4>注文情報</h4>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @order.created_at.to_s(:datetime_jp) %></td>
      <td>
        〒<%= @order.delivery_postal %></br>
        <%= @order.delivery_address %></br>
        <%= @order.delivery_name %>
      </td>
      <td>
        <%= @order.payment_method_i18n %>
      </td>
      <td>
        <%= @order.status_i18n %>
      </td>
    </tr>
  </tbody>
</table>

<h4>請求情報</h4>
<table>
  <thead>
    <tr>
      <th>商品合計</th>
      <th>配送料</th>
      <th>ご請求額</th>
    </tr>
  </thead>
  <tbody>
    <tr>
       <% @item_total = 0 %>
      <td>
        <% @item_total = @order.total_cost - @order.postage %>
        <%= @item_total %>
      </td>
      <td><%= @order.postage %></td>
      <td>
        <%= @order.total_cost %>
      </td>
    </tr>
  </tbody>
</table>

<h4>注文内容</h4>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価(税込み)</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_detail.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.price %></td>
      <td><%= order_detail.count %></td>
      <td><%= order_detail.cost %></td>
    </tr>
    <% end %>
  </tbody>
</table>
