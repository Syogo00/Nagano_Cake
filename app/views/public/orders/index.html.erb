<div class="container">
  <h2 class="m-2">注文履歴一覧</h2>
  <div class="col-lg-10 m-auto">
    <table class="table m-3">
      <thead>
        <tr>
          <th>注文日</th>
          <th>転送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @order.each do |order| %>
        <tr>
          <td><%= order.created_at.to_s(:datetime_jp) %></td>
          <td>
            〒<%= order.delivery_postal %></br>
            <%= order.delivery_address %></br>
            <%= order.delivery_name %>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
              <%=  order_detail.item.name %>
            <% end %>
          </td>
          <% item_sum = 0 %>
          <td>
            <%= order.total_cost %>
          </td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する", order_path(order.id), class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
