<h2>配送先登録/一覧</h2>
<%= form_with model: @adress, url: adresses_path do |f| %>
  <div class="form-group">郵便番号(ハイフンなし)
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">住所
    <%= f.text_field :adress %>
  </div>
  <div class="form-group">宛名
    <%= f.text_field :name %>
  </div>
  <din class="form-group">
    <%= f.submit "新規登録" %>
  </din>
<% end %>

<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @adresses.each do |adress| %>
    <tr>
      <td><%= adress.postal_code %></td>
      <td><%= adress.adress %></td>
      <td><%= adress.name %></td>
      <td><%= link_to "編集する", adresses_edit_path(adress.id) %></td>
      <td><%= link_to "削除する", adresses_destroy_path, method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>