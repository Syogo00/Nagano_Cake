  <div class="container">
    <div class="col-lg-10 m-auto pb-0">
      <h2>マイページ</h2>
      <h4>登録情報</h5>
      <div class="m-3 text-right">
        <%= link_to "編集する", customers_edit_path(@customer.id), class: "btn btn-success"%>
      </div>
        <div class="field">
          <span class="font-weight-bold">氏名</span>
          <%= @customer.first_name %>  <%= @customer.last_name %>
        </div>
        <div class="field">
          <span class="font-weight-bold">カナ</span>
          <%= @customer.first_name_kana %>  <%= @customer.last_name_kana %>
        </div>
        <div class="field">
          <span class="font-weight-bold">郵便番号</span>
          <%= @customer.postal_code %>
        </div>
        <div class="field">
          <span class="font-weight-bold">住所</span>
          <%= @customer.address %>
        </div>
        <div class="field">
          <span class="font-weight-bold">電話番号</span>
          <%= @customer.telephone_number %>
        </div>
        <div class="field">
          <span class="font-weight-bold">メールアドレス</span>
          <%= @customer.email %>
        </div>
      <div class="text-right m-3">
          <span class="font-weight-bold">配送先</span>
          <%= link_to "一覧を見る", addresses_path, class: "btn btn-success" %>
      </div>
      <div class="text-right m-3">
        <span class="font-weight-bold">注文履歴</span>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>