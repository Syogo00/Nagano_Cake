<h2>商品一覧</h2><p>（全<%= @items.count %>件）</p>
<div>
  <% @items.each do |item| %>
    <table>
      <tbody>
        <tr>
          <td>
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image(170,170) %>
            <% end %>
          </td>
          <td><%= item.name %></td>
          <td>￥<%= (item.price*1.08).to_i %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
